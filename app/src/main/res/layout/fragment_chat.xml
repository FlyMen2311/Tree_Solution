<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vistas.ui.comunicacion.ComunicacionFragment">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="409dp"
        android:layout_height="62dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/FotoCambiarPerfil"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            tools:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/UserNamePerfil"
            android:layout_width="299dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Nombre"
            android:textColor="#050505"
            android:textSize="18sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="406dp"
        android:layout_height="449dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.351">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="411dp"
        android:layout_height="62dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.862">


        <ImageButton
            android:id="@+id/localizacion_env"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_dialog_map"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="556dp" />

        <EditText
            android:id="@+id/Texto_mensaje"
            android:layout_width="299dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Escribe un mensaje"
            android:inputType="textMultiLine"
            android:textColor="#4E4D4D"
            android:textColorHint="#454444"
            tools:layout_editor_absoluteX="59dp"
            tools:layout_editor_absoluteY="556dp" />

        <ImageButton
            android:id="@+id/btn_enviar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_menu_send"
            tools:layout_editor_absoluteX="358dp"
            tools:layout_editor_absoluteY="556dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>