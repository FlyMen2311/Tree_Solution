<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/container_buscar_chats"
        android:layout_width="407dp"
        android:layout_height="109dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="622dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="20dp"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="60dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.545">

        <EditText
            android:id="@+id/buscar_chats_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Buscar por nombre"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#070707"
            android:textColorHighlight="#CA5454"
            android:textColorHint="#070707" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="565dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_chats"
            android:layout_width="match_parent"

            android:layout_height="583dp"
            android:background="@drawable/white_texture" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>